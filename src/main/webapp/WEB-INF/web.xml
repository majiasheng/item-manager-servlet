<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://java.sun.com/xml/ns/javaee" 
         version="2.5" 
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"> 

  <display-name>Archetype Created Web Application</display-name>
  <servlet>
  	<servlet-name>ItemServlet</servlet-name>
  	<servlet-class>servlets.ItemServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ItemServlet</servlet-name>
    <url-pattern>/additem</url-pattern>
    <url-pattern>/edititem</url-pattern>
    <url-pattern>/removeitem</url-pattern>
    <url-pattern>/updateitem</url-pattern>
    
  </servlet-mapping>
  
  
  <servlet>
  	<servlet-name>Refresh</servlet-name>
  	<servlet-class>servlets.Refresh</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Refresh</servlet-name>
    <url-pattern>/time</url-pattern>
  </servlet-mapping>
  
</web-app>
